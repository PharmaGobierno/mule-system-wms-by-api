		<ee:transform doc:name="Set Query" doc:id="69db9844-b100-4dfa-bc38-071b75919f7b">
			<ee:message />
			<ee:variables>
				<ee:set-variable variableName="queryBoxQuantity" ><![CDATA[%dw 2.0
output application/json
---
"SELECT shipment.ship_id ship_id, shipment.ship_id  ordnum,
    (nvl((
        SELECT
            COUNT(DISTINCT all_inv_v1.subnum) cajas_carton
        FROM
                 trxwmsprd.shipment shipment_1
            JOIN trxwmsprd.shipment_line      shipment_lin1 ON shipment_lin1.ship_id = shipment_1.ship_id
            LEFT JOIN trxwmsprd.all_inventory_view all_inv_v1 ON all_inv_v1.ship_line_id = shipment_lin1.ship_line_id
                                                       AND all_inv_v1.wh_id = shipment_lin1.wh_id
                                                       AND all_inv_v1.wh_id = shipment_1.wh_id
        WHERE
                shipment_1.ship_id = shipment.ship_id
            AND all_inv_v1.wh_id = shipment.wh_id
            AND all_inv_v1.phyflg = 1
    ),
          0) + nvl((
        SELECT
            SUM(sumas.suma) cajas_listas
        FROM
            (
                SELECT
                    ceil((
                        SELECT
                            SUM(lod1.untqty / lod1.untcas)
                        FROM
                           trxwmsprd.all_inventory_view lod1
                        WHERE
                            lod1.subnum = all_inv_v2.subnum
                    )) AS suma
                FROM
                         trxwmsprd.shipment_line shipment_line2
                    JOIN trxwmsprd.shipment           shipment_2 ON shipment_2.ship_id = shipment_line2.ship_id
                                                AND shipment_2.wh_id = shipment_line2.wh_id
                    LEFT JOIN trxwmsprd.all_inventory_view all_inv_v2 ON all_inv_v2.ship_line_id = shipment_line2.ship_line_id
                                                               AND all_inv_v2.wh_id = shipment_line2.wh_id
                                                               AND all_inv_v2.prtnum = shipment_line2.prtnum
                                                               AND all_inv_v2.prt_client_id = shipment_line2.prt_client_id
                WHERE
                        shipment_2.ship_id = shipment.ship_id
                    AND shipment_2.wh_id = shipment.wh_id
                    AND(all_inv_v2.phyflg = 0)
                GROUP BY
                    all_inv_v2.subnum
            ) sumas),0) ) bultos_por_orden
FROM
    trxwmsprd.shipment
WHERE
        shipment.ship_id in (" ++ payload ++ ")
    AND shipment.wh_id = 'AVIOR-27'"
]]></ee:set-variable>
			</ee:variables>
		</ee:transform>
